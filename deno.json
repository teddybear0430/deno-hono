{
  "compilerOptions": {
    "noImplicitAny": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "include": [
      "src/"
    ],
    "semiColons": true,
    "singleQuote": false
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read src/hello.ts"
  }
}
